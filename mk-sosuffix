#!/bin/sh
# $Id: mk-sosuffix 2909 2007-12-12 21:21:47Z m0 $

SYS_TYPE=`head -n 1 conf-systype`
if [ $? -ne 0 ]
then
  echo "fatal: could not read conf-systype" 1>&2
  exit 1
fi

case "${SYS_TYPE}" in
  DARWIN)
    exec echo 'dylib';;
  HPUX)
    exec echo 'sl';;
  MS_WINDOWS)
    exec echo 'dll';;
  *)
    exec echo 'so';;
esac
